#Klasa reprezentujaca punkt
class Punkt
{
    #Dwa publiczne atrybuty
    public Float x;
    public Float y;

    public Punkt punkt(Float x, Float y)
    {
        this.x = x;
        this.y = y;
    }
};

#Klasa reprezentujaca trojkat
class Trojkat
{
    #Atrybuty prywatne
    Punkt a;
    Punkt b;
    Punkt c;
    Float sideA; #Aktualne dlugosci bokow trojkata
    Float sideB;
    Float sideC;

    # Prywatna metoda na nowo obliczajaca dlugosci bokow trojkata
    Void zaktualizujBoki()
    {
        this.sideA = ((a.x-b.x)**2 + (a.y-b.y)**2)**0.5;
        this.sideB = ((b.x-c.x)**2 + (b.y-c.y)**2)**0.5;
        this.sideC = ((c.x-a.x)**2 + (c.y-a.y)**2)**0.5;
    }


    public Trojkat trojkat(Punkt na, Punkt nb, Punkt nc) {
        this.a = na;
        this.b = nb;
        this.c = nc;
        this.zaktualizujBoki();        
    }

    public Void setA(Punkt na)
    {
        this.a = na;
        this.zaktualizujBoki();
    }
    
    public Void setB(Punkt nb)
    {
        this.b = nb;
        this.zaktualizujBoki();
    }

    public Void setC(Punkt nc)
    {
        this.c = nc;
        this.zaktualizujBoki();
    }

    public Float obwod(){
        return this.sideA + this.sideB + this.sideC;
    }

    public Float pole(){
        Float s = this.obwod()/2;
        return (s*(s - this.sideA)*(s - this.sideB)*(s - this.sideC))**0.5;
    }
};



